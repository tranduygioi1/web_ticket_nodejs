<!-- Modal Quên mật khẩu -->
<div id="forgotPasswordModal" class="modal-overlay d-none">
  <div class="modal-content">
    <div class="modal-header">
      <h4>Khôi phục mật khẩu</h4>
      <button class="close-btn" onclick="closeForgotPasswordModal()">×</button>
    </div>

    <form id="forgotPasswordForm">
      <input type="email" name="email" placeholder="Email đăng ký" required>
      <input type="password" name="newPassword" placeholder="Mật khẩu mới" required>
      <input type="password" name="confirmPassword" placeholder="Xác nhận mật khẩu" required>
      <button type="submit">Gửi mã xác thực</button>
      <p id="forgotError" style="color:red; display:none; margin-top:5px;"></p>
      <p id="forgotSuccess" style="color:green; display:none; margin-top:5px;"></p>
    </form>

    <!-- Nhập mã xác thực -->
    <form id="verifyCodeForm" class="d-none">
      <input type="text" name="code" placeholder="Nhập mã xác thực (4 chữ số)" required>
      <button type="submit">Xác nhận</button>
      <p id="verifyError" style="color:red; display:none; margin-top:5px;"></p>
      <p id="verifySuccess" style="color:green; display:none; margin-top:5px;"></p>
    </form>
  </div>
</div>


