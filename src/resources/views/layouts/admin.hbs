<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Ticket Box</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-success">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Admin Ticket Box</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link text-white" href="/admin">Đăng xuất</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Wrapper -->
<div class="admin-wrapper">
  <!-- Sidebar -->
  <div class="sidebar-left">
    
    <!-- Quản lý sự kiện -->
    <div class="menu-group">
      <h5 id="eventToggle">🎛 Quản Lý Sự Kiện</h5>
      <div class="submenu" id="eventSubmenu" style="display:none;">
        <a href="/admin/list_event">📄 Danh sách sự kiện</a>
        <a href="/admin/create_event">➕ Tạo sự kiện</a>
      </div>
    </div>


    <!-- Quản lý vé -->
    <div class="menu-group" > 
      <h5>
        <a href="/admin/booking_management" class="main-link">🎟 Quản Lý Tất Cả Vé</a>
      </h5>
    </div>


    <!-- Quản lý admin -->
    <div class="menu-group">
      <h5 id="adminToggle">👤 Quản Lý Admin</h5>
      <div class="submenu" id="adminSubmenu" style="display:none;">
        <a href="/admin/manage_admin">📋 Danh sách Admin</a>
        <a href="/admin/manage_roles">⚙️ Quyền</a>
      </div>
    </div>

  </div>

  <!-- Content -->
  <div class="content-right">
    {{{body}}}
  </div>
</div>

<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  flatpickr("#startTime", {
    enableTime: true,
    noCalendar: true,
    dateFormat: "H:i",
    time_24hr: true,
    allowInput: true,
    scrollInput: true,
    minuteIncrement: 1
  });

  flatpickr("#endTime", {
    enableTime: true,
    noCalendar: true,
    dateFormat: "H:i",
    time_24hr: true,
    allowInput: true,
    scrollInput: true,
    minuteIncrement: 1
  });
</script>

<!-- CKEditor -->
<script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (document.getElementById("description")) {
      CKEDITOR.replace("description", {
        height: 300,
        toolbar: "Full",
        removePlugins: "elementspath",
        resize_enabled: true
      });
    }

    // Toggle submenu sự kiện
    const toggleEvent = document.getElementById("eventToggle");
    const submenuEvent = document.getElementById("eventSubmenu");
    toggleEvent.addEventListener("click", function () {
      submenuEvent.style.display = submenuEvent.style.display === "block" ? "none" : "block";
    });

    // Toggle submenu admin
    const toggleAdmin = document.getElementById("adminToggle");
    const submenuAdmin = document.getElementById("adminSubmenu");
    toggleAdmin.addEventListener("click", function () {
      submenuAdmin.style.display = submenuAdmin.style.display === "block" ? "none" : "block";
    });
  });
</script>
</body>
</html>
